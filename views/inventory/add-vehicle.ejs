<%- include('../partials/header') %>

<h1>Add Vehicle</h1>

<% if (message) { %>
  <div class="flash-message"><%= message %></div>
<% } %>

<% if (errors && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(function(err){ %>
      <li><%= err.msg %></li>
    <% }); %>
  </ul>
<% } %>

<form method="post" action="/inv/add-inventory" novalidate>
  <label for="classification_id">Classification</label>
  <select id="classification_id" name="classification_id" required>
    <option value="">Select a classification</option>
    <% classifications.forEach(function(c){ %>
      <option value="<%= c.classification_id %>" <%= (data.classification_id == c.classification_id) ? 'selected' : '' %>><%= c.classification_name %></option>
    <% }); %>
  </select>

  <label for="inv_make">Make</label>
  <input id="inv_make" name="inv_make" type="text" value="<%= data.inv_make || '' %>" required>

  <label for="inv_model">Model</label>
  <input id="inv_model" name="inv_model" type="text" value="<%= data.inv_model || '' %>" required>

  <label for="inv_price">Price</label>
  <input id="inv_price" name="inv_price" type="number" step="0.01" value="<%= data.inv_price || '' %>" required>

  <label for="inv_miles">Miles</label>
  <input id="inv_miles" name="inv_miles" type="number" step="1" value="<%= data.inv_miles || '' %>">

  <label for="inv_color">Color</label>
  <input id="inv_color" name="inv_color" type="text" value="<%= data.inv_color || '' %>">

  <label for="inv_image">Image URL</label>
  <input id="inv_image" name="inv_image" type="text" value="<%= data.inv_image || '/images/vehicles/no-image.png' %>">

  <label for="inv_thumbnail">Thumbnail URL</label>
  <input id="inv_thumbnail" name="inv_thumbnail" type="text" value="<%= data.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>">

  <label for="inv_description">Description</label>
  <textarea id="inv_description" name="inv_description" required><%= data.inv_description || '' %></textarea>

  <button type="submit">Add Vehicle</button>
</form>

<%- include('../partials/footer') %>
