<%- include('../partials/header') %>

<h1>Add Vehicle</h1>

<% if (errors && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(function(err){ %><li><%= err %></li><% }); %>
  </ul>
<% } %>

<form method="post" action="/inv/add-vehicle">
  <label for="inv_make">Make</label>
  <input id="inv_make" name="inv_make" type="text" value="<%= data.inv_make || '' %>" required>

  <label for="inv_model">Model</label>
  <input id="inv_model" name="inv_model" type="text" value="<%= data.inv_model || '' %>" required>

  <label for="classification_id">Classification</label>
  <select id="classification_id" name="classification_id" required>
    <option value="">Select a classification</option>
    <% classifications.forEach(function(c){ %>
      <option value="<%= c.classification_id %>" <%= (data.classification_id == c.classification_id) ? 'selected' : '' %>><%= c.classification_name %></option>
    <% }) %>
  </select>

  <label for="inv_price">Price</label>
  <input id="inv_price" name="inv_price" type="number" value="<%= data.inv_price || '' %>" step="0.01" required>

  <label for="inv_miles">Miles</label>
  <input id="inv_miles" name="inv_miles" type="number" value="<%= data.inv_miles || '' %>" step="1">

  <label for="inv_color">Color</label>
  <input id="inv_color" name="inv_color" type="text" value="<%= data.inv_color || '' %>">

  <label for="inv_image">Image URL</label>
  <input id="inv_image" name="inv_image" type="text" value="<%= data.inv_image || '' %>">

  <label for="inv_thumbnail">Thumbnail URL</label>
  <input id="inv_thumbnail" name="inv_thumbnail" type="text" value="<%= data.inv_thumbnail || '' %>">

  <label for="inv_description">Description</label>
  <textarea id="inv_description" name="inv_description"><%= data.inv_description || '' %></textarea>

  <button type="submit">Add Vehicle</button>
</form>

<%- include('../partials/footer') %>
