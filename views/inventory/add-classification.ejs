<%- include('../partials/header') %>
<section class="container">
  <h2>Add New Classification</h2>

  <% if (errors && errors.length) { %>
    <div class="flash error">
      <ul>
        <% errors.forEach(function(e){ %><li><%= e %></li><% }) %>
      </ul>
    </div>
  <% } %>

  <form action="/inv/add-classification" method="post" novalidate>
    <label for="classification_name">Classification Name (no spaces or special chars)</label>
    <input type="text" id="classification_name" name="classification_name" required pattern="[A-Za-z0-9_-]+" value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>">
    <button type="submit">Add Classification</button>
  </form>

  <p><a href="/inv/">Return to Management</a></p>
</section>
<%- include('../partials/footer') %>
